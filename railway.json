{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "sh -c 'npx openclaw gateway --bind 0.0.0.0 --port $PORT --auth token --token $OPENCLAW_GATEWAY_TOKEN'",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
